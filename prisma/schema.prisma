model Attibute {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?
  type        String?
  name        String
  description String?
  palette     String?
  shipping    String?
  active      Boolean    @default(false)
  position    Int        @default(0)
  attibuteId  String?
  childrens   Attibute[] @relation(name: "attibute")
  parent      Attibute?  @relation(name: "attibute", fields: [attibuteId], references: [id], onDelete: Restrict, onUpdate: Restrict)

  @@index([attibuteId])
  @@map("attibutes")
}

model Promotion {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  name      String
  type      String // %|$
  discont   String

  @@map("promotions")
}

model Produtct {
  id              String    @id @default(cuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?
  name            String
  description     String?
  descriptionText String?
  metaDescription String?
  metaTag         String?
  emphasis        Boolean   @default(false)
  active          Boolean   @default(false)
  category        Category? @relation(fields: [categoryId], references: [id], onDelete: Restrict, onUpdate: Restrict)
  categoryId      String?

  @@index([categoryId])
  @@map("products")
}
